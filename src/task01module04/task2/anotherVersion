public class Solution {

    private int numberDay;
    private boolean flag = true;
    private int counter = 1;

    public void getResult(int number) {
        setNumberDay(number);
        processingNumberDayToDate();
    }

    private void setNumberDay(int numberDay) {
        this.numberDay = numberDay;
    }

    private void processingNumberDayToDate() {
        day(31);
        day(28);
        day(31);
        day(30);
        day(31);
        day(30);
        day(31);
        day(31);
        day(30);
        day(31);
        day(30);
        day(31);
    }

    private void day(int countDays) {
        if (numberDay <= countDays && flag) {
            dateToScreen();
            changeFlag();
        } else {
            numberDay -= countDays;
            counter++;
        }
    }

    private void dateToScreen() {
        System.out.println(numberDay + " . " + counter);
    }

    private void changeFlag() {
        flag = false;
    }
}
